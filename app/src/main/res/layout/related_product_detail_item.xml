<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="170dp"
    android:layout_height="180dp"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    android:elevation="3dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >

        <ImageView
            android:id="@+id/productIVId"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/dummy_laptop" />

        <TextView
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/productNameTVId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="ACER"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toBottomOf="@+id/productIVId"
            tools:layout_editor_absoluteX="8dp"
            android:layout_marginTop="10dp"/>

        <TextView
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/productTypeTVId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_marginStart="5dp"
            android:text="Gaming Laptop"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/productNameTVId"
            tools:layout_editor_absoluteX="8dp" />


        <TextView
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/productPriceTVId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="TK. 103,000.00"
            android:layout_marginStart="5dp"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/productTypeTVId"
            tools:layout_editor_absoluteX="8dp" />


        <TextView
            android:id="@+id/addCartTVId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="52dp"
            android:layout_marginRight="4dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Add to Cart"
            android:textColor="@color/mart_teal"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/productPriceTVId"
            app:layout_constraintTop_toBottomOf="@+id/productIVId" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>